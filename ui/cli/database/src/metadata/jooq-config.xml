<configuration xmlns="http://www.jooq.org/xsd/jooq-codegen-3.19.0.xsd">
    <!-- Configure the database connection here -->
    <generator>
        <!-- A programmatic naming strategy implementation, referenced by class name. -->
        <strategy>
            <name>org.jooq.codegen.KeepNamesGeneratorStrategy</name>
        </strategy>

        <database>
            <name>org.jooq.meta.xml.XMLDatabase</name>
            <properties>
                <!-- Use any of the SQLDialect values here -->
                <property>
                    <key>dialect</key>
                    <value>MYSQL</value>
                </property>

                <!-- Specify the location of your database file -->
                <property>
                    <key>xmlFile</key>
                    <value>../../../generated/data/xml/XMLDatabase.xml</value>
                </property>
            </properties>
        </database>

        <!-- Generation flags: See advanced configuration properties -->
        <generate/>

        <target>
            <!-- The destination package of your generated classes (within the
                 destination directory)

                 jOOQ may append the schema name to this package if generating multiple schemas,
                 e.g. org.jooq.your.packagename.schema1
                      org.jooq.your.packagename.schema2 -->
            <packageName>com.echothree.model.jooq</packageName>

            <!-- The destination directory of your generated classes -->
            <directory>../../../generated/data/java</directory>
        </target>
    </generator>
</configuration>
